{
  "name": "bms-analyzer-local",
  "version": "2.0.0",
  "description": "BMS screenshot analyzer with Zero-Tolerance Timestamp Policy - extracts battery data to CSV",
  "main": "src/server.js",
  "bin": {
    "bms-analyzer": "./src/server.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "start:legacy": "node server.js",
    "dev": "node src/server.js",
    "build": "pkg . --targets node18-macos-x64 --output dist/bms-analyzer",
    "build:arm": "pkg . --targets node18-macos-arm64 --output dist/bms-analyzer-arm",
    "build:all": "pkg . --targets node18-macos-x64,node18-macos-arm64,node18-linux-x64,node18-win-x64 --out-path dist"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js",
      "lib/**/*.js"
    ],
    "assets": [
      "public/**/*",
      "src/prompts/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "open": "^10.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Luke",
  "license": "MIT"
}
