{
  "name": "bms-validator",
  "version": "2.0.0",
  "type": "module",
  "private": true,
  "description": "An application to analyze Battery Management System (BMS) screenshots using AI with comprehensive updates.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "ANALYZE=true vite build",
    "build:stats": "vite build --mode analyze",
    "preview": "vite preview",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:ci": "jest --config jest.config.cjs --ci --coverage --watchAll=false",
    "test:changed": "jest --config jest.config.cjs --changedSince=HEAD",
    "test:file": "jest --config jest.config.cjs --findRelatedTests",
    "lint": "eslint src/ netlify/functions/ tests/",
    "lint:fix": "eslint src/ netlify/functions/ tests/ --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "npm run lint && npm run type-check && npm run test:ci",
    "prepare": "husky install",
    "seed:monitoring": "node scripts/seed-monitoring-data.js",
    "preload:critical": "node scripts/preload-critical-modules.js",
    "analyze:bundle": "npm run build:analyze && open dist/bundle-analysis.html",
    "optimize:images": "imagemin src/**/*.{jpg,png,svg} --out-dir=src/assets/optimized",
    "compress:assets": "gzip -k dist/assets/*.js dist/assets/*.css",
    "performance:audit": "lighthouse http://localhost:4173 --output html --output-path ./dist/lighthouse-report.html"
  },
  "dependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@dqbd/tiktoken": "^1.0.13",
    "@google/genai": "^0.11.0",
    "@netlify/async-workloads": "^0.0.92",
    "@netlify/blobs": "^7.3.0",
    "@netlify/functions": "^5.1.0",
    "@types/netlify-identity-widget": "^1.9.7",
    "axios": "^1.7.9",
    "buffer": "^6.0.3",
    "dexie": "^4.2.1",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^4.3.2",
    "glob": "^10.4.5",
    "jszip": "^3.10.1",
    "mongodb": "^6.20.0",
    "multiparty": "^4.2.3",
    "netlify-identity-widget": "^1.9.2",
    "nodemailer": "^7.0.10",
    "process": "^0.11.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-modules-commonjs": "^7.24.8",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "compression-webpack-plugin": "^11.1.0",
    "core-js": "^3.46.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^15.14.0",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.2.1",
    "msw": "^2.3.5",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.38",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.4",
    "terser": "^5.36.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^0.21.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
